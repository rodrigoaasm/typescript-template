{
    "name": "typescript-template",
    "version": "2.0.0",
    "description": "This repository is a template for a Typescript project.",
    "author": {
        "name": "Rodrigo Maia",
        "email": "rodrigoasmaia@gmail.com"
    },
    "keywords": [
        "Typescript",
        "nodemon",
        "jest",
        "Eslint"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/rodrigoaasm/typescript-template"
    },
    "scripts": {
        "build": "tsup ./src/index.ts",
        "start": "tsx ./src/index.ts",
        "start:dev": "tsx watch ./src/index.ts",
        "test": "jest --coverage --runInBand",
        "test:unit": "jest ./tests/units --coverage",
        "test:integration": "jest ./tests/integration --runInBand"
    },
    "devDependencies": {
        "@types/jest": "^29.4.0",
        "@types/node": "^18.14.2",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.54.0",
        "@typescript-eslint/parser": "^5.54.0",
        "eslint": "^8.35.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "jest": "^29.4.3",
        "supertest": "^6.3.3",
        "ts-jest": "^29.0.5",
        "tsconfig-paths": "^3.14.2",
        "tsup": "^6.6.3",
        "tsx": "^3.12.3",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "dotenv": "^16.0.3"
    }
}
