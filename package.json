{
    "name": "typescript-template",
    "version": "1.0.0",
    "description": "This repository is a template for a Typescript project.",
    "author": {
        "name": "Rodrigo Maia",
        "email": "rodrigoasmaia@gmaiul.com"
    },
    "keywords": [
        "Typescript",
        "nodemon",
        "jest",
        "Eslint"
    ],    
    "repository": {
        "type": "git",
        "url": "https://github.com/rodrigoaasm/typescript-template"
      },
    "scripts": {
        "build": "tsc",
        "start": "node ./build/index.js",
        "dev": "nodemon ts-node-dev -r tsconfig-paths/register ./src/index.ts",
        "test": "jest --coverage",
        "unit-test": "jest ./tests/units --coverage",
        "integration-test": "jest ./tests/integration --runInBand"
    },
    "devDependencies": {
        "@types/jest": "^27.0.1",
        "@types/node": "^14.14.10",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^4.30.0",
        "@typescript-eslint/parser": "^4.30.0",
        "dotenv": "^10.0.0",
        "eslint": "^7.32.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-config-airbnb-typescript": "^14.0.0",
        "jest": "^27.1.0",
        "nodemon": "^2.0.4",
        "supertest": "^6.1.6",
        "ts-jest": "^27.0.5",
        "ts-node": "^9.1.1",
        "ts-node-dev": "^1.1.8",
        "tsconfig-paths": "^3.11.0",
        "typescript": "^3.9.5"
    }
}
